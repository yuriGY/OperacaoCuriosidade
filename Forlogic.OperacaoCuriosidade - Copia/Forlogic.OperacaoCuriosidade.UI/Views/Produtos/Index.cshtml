@using Forlogic.OperacaoCuriosidade.UI.ViewModels.Produtos.Index

@{
    ViewBag.Title = "Listagem de Produtos";
}

<h2>@ViewBag.Title</h2>

<div class="mb-3">
    <a class="btn btn-outline-dark" href="@Url.Action("AddEdit")">Novo Produto</a>
</div>
<table class="table table-striped table-hover table-responsive-sm p-3">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Preço</th>
            <th>Tipo</th>
            <th>Qtde</th>
            <th>Data do Cadastro</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (ProdutoIndexVM produto in Model)
        {
            <tr id="produto-@produto.Id">
                <td>@produto.Nome</td>
                <td>@produto.Preco.ToString("C2")</td>
                <td>@produto.Tipo</td>
                <td>@produto.Qtde</td>
                <td>@produto.DataCadastro</td>
                <td>
                    <a class="btn btn-sm btn-outline-success" href="@Url.Action("AddEdit", new {id=produto.Id})"><i class="fas fa-edit"></i> Editar</a>
                    <button class="btn btn-sm btn-outline-danger" onclick="DelProd(@produto.Id, '@produto.Nome')"><i class="fas fa-trash"></i> Excluir</button>
                </td>

            </tr>
        }
    </tbody>
</table>

<div data-id="0" class="modal" id="delModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Excluir Produto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Tem certeza que quer excluir o produto <strong><span id="nomeProdutoModal"></span></strong>?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button onclick="ConfirmDelProd()" type="button" class="btn btn-primary">Confirmar</button>
            </div>
        </div>
    </div>
</div>

<script>
    function DelProd(id, nome) {
        $('#nomeProdutoModal').text(nome)
        $('#delModal').data('id', id).modal('show')
    }

    function ConfirmDelProd() {
        let id = $('#delModal').data('id')
        let xhr = new XMLHttpRequest();
        const url = `/Produtos/DelProd/${id}`

        xhr.onreadystatechange = function () {
            if (this.readyState === 4 && this.status === 404) {
                toastr.error('Produto não localizado!', 'FL Store')
            }

            if (this.readyState === 4 && this.status === 200) {
                let tr = document.querySelector(`#produto-${id}`)
                if (tr !== null) {
                    tr.remove()
                }
                $('#delModal').data('id', '0').modal('hide')
                toastr.success('Produto excluído com sucesso!', 'FL Store')
            }
        }

        xhr.open('get', url)
        xhr.send()
    }
</script>