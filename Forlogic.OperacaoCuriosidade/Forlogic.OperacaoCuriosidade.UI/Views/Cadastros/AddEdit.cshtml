@model Forlogic.OperacaoCuriosidade.UI.ViewModels.Cadastros.AddEdit.CadastroAddEditVM
@{
    ViewBag.Title = $"{(Model.Id == 0 ? "Adicionar" : "Editar")} Cadastro";
}
<h2>@ViewBag.Title</h2>

<form method="post" class="mt-4">

    <div class="form-group row g-1">
        <h4>1º Fatos e Dados</h4>
        <hr />
        <div class="col-md-10">
            <label for="txtNome" class="form-label">Nome</label>
            @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", autofocus = "" })
            <small>
                @Html.ValidationMessageFor(m => m.Nome, null, new { @class = "text-danger" })
            </small>
        </div>

        <div class="col-md-2">
            <label for="idade" class="form-label">Idade</label>
            @Html.TextBoxFor(m => m.Idade, new { @class = "form-control" })
            <small>
                @Html.ValidationMessageFor(m => m.Idade, null, new { @class = "text-danger" })
            </small>
        </div>

        <div class="col-md-6">
            <label for="txtEmail" class="form-label">Email</label>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            <small>
                @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
            </small>
        </div>

        <div class="col-md-4">
            <label for="txtSenha" class="form-label">Senha</label>
            @Html.TextBoxFor(m => m.Senha, new { @class = "form-control" })
            <small>
                @Html.ValidationMessageFor(m => m.Senha, null, new { @class = "text-danger" })
            </small>
        </div>

        <div class="col-md-2">
            <label for="txtTipo" class="form-label">Usuário</label>
            @Html.DropDownListFor(m => m.TipoDeCadastroId,
            new SelectList(ViewBag.Tipos, "Id", "Nome"),
            "Selecione...",
            new { @class = "form-select" })
            <small>
                @Html.ValidationMessageFor(m => m.TipoDeCadastroId, null, new { @class = "text-danger" })
            </small>
        </div>

        <div class="col-12">
            <label for="txtEndereco" class="form-label">Endereço</label>
            @Html.TextBoxFor(m => m.Endereco, new { @class = "form-control", placeholder = "Rua, bairro, cidade..." })
            <small>
                @Html.ValidationMessageFor(m => m.Endereco, null, new { @class = "text-danger" })
            </small>
        </div>

        <div class="form-group">
            <label for="txtOutros" class="form-label">Outros:</label>
            @Html.TextAreaFor(m => m.Outros, new { @class = "form-control", style="height: 80px" })
            <small>
                @Html.ValidationMessageFor(m => m.Outros, null, new { @class = "text-danger" })
            </small>
        </div>
    </div>
    <div class="form-group row g-1">
        <div class="form-group mt-4">
            <label for="txtInteresses" id="bigLabel">2º Interesses</label>
            <hr />
            @Html.TextAreaFor(m => m.Interesses, new { @class = "form-control", id = "textarea" })
            <small>
                @Html.ValidationMessageFor(m => m.Interesses, null, new { @class = "text-danger" })
            </small>
        </div>

        <div class="form-group mt-3">
            <label for="txtInteresses" id="bigLabel">3º Sentimentos</label>
            <hr />
            @Html.TextAreaFor(m => m.Sentimentos, new { @class = "form-control", id = "textarea" })
            <small>
                @Html.ValidationMessageFor(m => m.Sentimentos, null, new { @class = "text-danger" })
            </small>
        </div>

        <div class="form-group mt-3">
            <label for="txtInteresses" id="bigLabel">4º Valores</label>
            <hr />
            @Html.TextAreaFor(m => m.Valores, new { @class = "form-control", id = "textarea" })
            <small>
                @Html.ValidationMessageFor(m => m.Valores, null, new { @class = "text-danger" })
            </small>
        </div>

        <div>
            @Html.ValidationSummary(true)
        </div>

        <div class="form-group mb-3">
            <button class="btn btn-outline-secondary mt-3">Salvar</button>
            <a class="btn btn-outline-info mt-3" href="@Url.Action("Index")">Cancelar</a>
        </div>
    </div>
</form>

@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap.validate.js"></script>
}